<script src="/js/vue.js"></script>

<div id="read-it-later">
	<ul>
		<li v-for="record in bookmarks">
			<div class="starred">
				<span v-if="record.starred">â˜…</span>
			</div>
			<div class="content">
				<div class="title">
					<a :href="record.url">{{ record.title }}</a>
				</div>
				<div class="meta">{{ record.watched_time }}</div>
				<div v-if="record.note != null" class="meta">{{ record.note }}</div>
			</div>
		</li>
	</ul>
</div>



<script>
	var api_url = '/read-it-later/api/get'
	
	var app = new Vue({

	  el: '#read-it-later',

	  data: {
	    bookmarks: null
	  },

	  created: function () {
	    this.fetchData()
	  },
	  
	  // watch: {
	  //   bookmarks: 'fetchData'
	  // },

	  methods: {
	    fetchData: function () {
	      var xhr = new XMLHttpRequest()
	      var self = this
	      xhr.open('GET', api_url)
	      xhr.onload = function () {
	        self.bookmarks = JSON.parse(xhr.responseText)
	        console.log('got it.')
	      }
	      xhr.send()
	    }
	  }
	})
</script>


	
