<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="/css/base.css">
    <title>小蔫蔫的飯否</title>
    <style>
      body {
        padding: 10px;
        font-size: 14px;
      }

      h1 {
        font-size: 16px;
      }

      h2 {
        font-size: 20px;
        text-decoration: underline;
      }

      h3 {
        font-size: 20px;
      }

      section > header {
        margin-bottom: 10px;
      }

      section > header > h2 {
        font-size: 20px;
      }

      ul {
        list-style-position: inside;
        margin: 10px 0;
	    background-color: #fafafa;
	    border: 1px solid #ccc;
	    border-radius: 4px;
	    padding: 10px;
      }
	  
      li {
        list-style-position: inside;
        margin: 8px 0;
      }
	  
	  li a {
	    color: #999;
        font-size: smaller;
	  }

      section p {
        margin: 15px 0 30px 0;
      }

      ul:hover {
        background-color: #fbf9e6;
      }
	  
	  .created-time-cell {
		vertical-align: top;
		min-width: 140px;
		padding-right: 10px;
	  }
	  
	  .content-cell {
	  	vertical-align: top;
	  }
	  
	  .content-cell div {
	  	font-size: 10px;
		color: #999;
		margin: 2px 0px 2px 0px;
	  }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">飯糰🍙</a> / 小蔫蔫的飯否</h1>
    </header>
    <section>
      <br /> <br />

<%
@conversations_nimr.each do |items|
  owners = items.reduce([]) { |memo, k| memo << @statuses_pool_nimr[k]["owner"] }
  next if owners.uniq == ["Sedgewick"]
%>

  <ul>
	  
  <% items.each do |k| %>
  
	<li>
		<table>
			<tbody>
				<tr>
					<td class="created-time-cell">
			  	      	<a target="_blank" href="http://fanfou.com/statuses/<%= k %>?fr=viewreply">
							<%= @statuses_pool_nimr[k]["created_at"] %>
			  		  	</a>
					</td>
					<td class="content-cell">
						<%
						if @statuses_pool_nimr[k]["owner"] == 'Sedgewick'
						%>
							<div>
								(by <%= @statuses_pool_nimr[k]["owner"] %>)
							</div>
						<%
						end
						%>
			  		    <%= @statuses_pool_nimr[k]["text"].gsub(/^\s*@Sedgewick\s+\|\s+/, '').gsub(/\n/, "<br />") %>
			  		  	<br />
			  		  	<% unless @statuses_pool_nimr[k]["photo_url_large"].nil? %>
							<a href="<%= @statuses_pool_nimr[k]["photo_url_large"] %>">
			  		      	  <img src="<%= @statuses_pool_nimr[k]["photo_url_thumb"] %>">
			  		    	</a>
			  		  	<% end %>
					</td>
				</tr>
			</tbody>
		</table>
    </li>
	
  <% end %>
  
  </ul>
  
<% end %>
		
      
    </section>
    <footer>
      <a href="mailto:yx.pu@live.com">yx.pu@live.com</a>
      <p>&copy; 抄襲自 Alexis Sellier</p>
    </footer>
  </body>
</html>

